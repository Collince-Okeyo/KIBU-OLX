<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragments.SplashFragment">


    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/cart_image"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/ic_shopping_cart"
        android:tint="?attr/colorControlNormal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.26" />

    <TextView
        android:id="@+id/kibu_olx_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:fontFamily="sans-serif-black"
        android:text="KIBU-OLX"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="?android:attr/textColorPrimary"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cart_image" />

    <TextView
        android:id="@+id/comrade_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/bangers"
        android:paddingEnd="3dp"
        android:text="Your Comrade Life Simplified"
        android:textAlignment="center"
        android:textColor="?android:attr/textColorPrimary"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/kibu_olx_tv"
        app:layout_constraintStart_toStartOf="@+id/kibu_olx_tv"
        app:layout_constraintTop_toBottomOf="@+id/kibu_olx_tv" />
</androidx.constraintlayout.widget.ConstraintLayout>
